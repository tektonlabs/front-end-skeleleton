{
  "name": "front-end-skeleton",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ],
          "plugins": [
            "transform-class-properties"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start-dev": "parallelshell 'npm run watch' 'npm run sync'",
    "preclean": "./bin/preclean",
    "clean": "./bin/clean",
    "sync": "browser-sync start --files 'build/**/*.css, build/**/*.js'",
    "build-vendor-js": "./bin/build-vendor-js",
    "build-js": "./bin/build-js",
    "watch-js": "./bin/watch-js",
    "build-css": "./bin/build-css",
    "watch-css": "./bin/watch-css",
    "build": "npm run clean && npm run build-vendor-js && npm run build-js && npm run build-css",
    "watch": "parallelshell 'npm run watch-js' 'npm run watch-css'"
  },
  "engines": {
    "node": "5.3.0"
  },
  "author": "Gianluca Candiotti",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "ramda": "^0.19.1",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "uglify-js": "^2.6.1",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "watchify": "^3.7.0"
  }
}
